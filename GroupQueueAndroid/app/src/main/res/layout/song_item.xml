<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/songItemLayout">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/albumArtImage"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Title"
        android:id="@+id/songTitleText"
        android:layout_alignTop="@+id/albumArtImage"
        android:layout_toRightOf="@+id/albumArtImage"
        android:layout_toEndOf="@+id/albumArtImage"
        android:layout_marginTop="5dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:id="@+id/songArtistText"
        android:layout_alignBottom="@+id/albumArtImage"
        android:layout_toRightOf="@+id/albumArtImage"
        android:layout_toEndOf="@+id/albumArtImage"
        android:layout_marginBottom="10dp"
        android:textSize="18dp" />
</RelativeLayout>