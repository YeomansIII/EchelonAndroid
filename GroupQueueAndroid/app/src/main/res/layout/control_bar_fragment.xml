<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:visibility="gone">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end">

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/controlPlayButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/background_floating_material_dark"
            materialdesign:animate="false"
            materialdesign:iconDrawable="@drawable/ic_play_arrow_white_48dp"
            android:layout_marginRight="10dp" />

        <com.gc.materialdesign.views.ButtonFloat
            android:id="@+id/groupAddSongButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#57387B"
            materialdesign:animate="false"
            materialdesign:iconDrawable="@drawable/ic_add_white_48dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>
</RelativeLayout>