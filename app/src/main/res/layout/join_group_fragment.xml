<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/joinGroupFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Join a Group"
            android:textSize="25sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/joinGroupNameEditWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:drawableLeft="@drawable/ic_library_music_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_library_music_black_24dp"
                android:ems="10"
                android:hint="Group Name"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/joinGroupPasswordEditWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                android:ems="10"
                android:hint="Group Password"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <io.yeomans.echelon.ui.views.ButtonRectangle
            android:id="@+id/joinGroupCreateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Join Group" />
    </LinearLayout>
</RelativeLayout>