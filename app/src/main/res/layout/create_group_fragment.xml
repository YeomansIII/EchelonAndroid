<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/createGroupNameEditWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:drawableLeft="@drawable/ic_queue_music_black_36dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email_outline_black_24dp"
            android:ems="10"
            android:hint="Group Name"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/createGroupPasswordEditWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:drawableLeft="@drawable/ic_email_outline_black_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_email_outline_black_24dp"
            android:ems="10"
            android:hint="Group Password"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>