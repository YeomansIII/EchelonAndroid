<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradient_queue"
  android:orientation="vertical">

  <ImageButton
    android:id="@+id/songListPlaylistPickerButton"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/colorPrimary"
    android:tint="@color/white"
    android:visibility="gone"
    app:srcCompat="@drawable/check" />

  <android.support.v7.widget.RecyclerView
    android:id="@+id/songListRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/songListPlaylistPickerButton"
    android:clipToPadding="false" />

  <FrameLayout
    android:id="@+id/songListLoadOverlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clickable="true">

    <ProgressBar
      android:id="@+id/progressBar"
      style="@style/Widget.AppCompat.ProgressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center" />
  </FrameLayout>

</RelativeLayout>
