<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:fab="http://schemas.android.com/apk/res-auto"
  android:id="@+id/queueGroupRootView"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/gradient_queue">

  <android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent">

      <android.support.design.widget.CollapsingToolbarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_scrollFlags="scroll|exitUntilCollapsed">

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal|top"
          android:background="#99FFFFFF"
          app:layout_collapseMode="parallax">

          <ImageView
            android:id="@+id/nowPlayingAlbumArtImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/album_cover_image"
            android:scaleType="centerCrop" />
        </RelativeLayout>
      </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
      android:id="@+id/queueNestedScrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
          android:id="@+id/queueNowPlayingLayout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentEnd="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/nowPlayingAlbumArtImage"
          android:padding="16dp">

          <TextView
            android:id="@+id/nowPlayingTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="Song Title"
            android:textSize="20dp" />

          <TextView
            android:id="@+id/nowPlayingArtistText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nowPlayingTitleText"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Artist"
            android:textSize="15dp" />

          <!--<ImageButton-->
          <!--android:id="@+id/nowPlayingVoteSongDownButton"-->
          <!--android:layout_width="50dp"-->
          <!--android:layout_height="50dp"-->
          <!--android:layout_alignParentEnd="true"-->
          <!--android:background="@color/transparent"-->
          <!--android:contentDescription="@string/vote_song_down_image"-->
          <!--android:padding="5dp"-->
          <!--android:scaleType="fitCenter"-->
          <!--android:tint="#888"-->
          <!--app:srcCompat="@drawable/thumb_down" />-->
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
          android:id="@+id/queuedSongsRecyclerView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />

        <RelativeLayout
          android:id="@+id/queueDefaultPlaylist"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:visibility="visible">

          <TextView
            android:id="@+id/queueDefaultPlaylistText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="default playlist"
            android:textSize="16sp" />

          <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/queueDefaultPlaylistText">

            <include layout="@layout/playlist_item_hor" />
          </FrameLayout>
        </RelativeLayout>
      </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <com.github.clans.fab.FloatingActionMenu
      android:id="@+id/groupAddSongFab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|end"
      android:layout_marginBottom="20dp"
      android:layout_marginRight="20dp"
      android:tint="@color/white"
      app:layout_behavior="io.yeomans.echelon.ui.other.FloatingActionMenuBehavior"
      app:srcCompat="@drawable/fab_add"
      fab:menu_colorNormal="@color/colorPrimary"
      fab:menu_colorPressed="@color/colorPrimaryDark"
      fab:menu_colorRipple="@color/colorPrimaryLight">

      <com.github.clans.fab.FloatingActionButton
        android:id="@+id/groupAddSongFab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_magnify_white_18dp"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="@color/colorPrimaryLight"
        fab:fab_label="Search" />

      <com.github.clans.fab.FloatingActionButton
        android:id="@+id/groupAddSongFab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_library_add_white_18dp"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="@color/colorPrimaryLight"
        fab:fab_label="Your Library" />

      <com.github.clans.fab.FloatingActionButton
        android:id="@+id/groupAddSongFab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_album_white_18dp"
        fab:fab_colorNormal="@color/colorPrimary"
        fab:fab_colorPressed="@color/colorPrimaryDark"
        fab:fab_colorRipple="@color/colorPrimaryLight"
        fab:fab_label="Browse" />
    </com.github.clans.fab.FloatingActionMenu>

  </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
