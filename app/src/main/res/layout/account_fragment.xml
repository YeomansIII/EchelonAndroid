<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/joinGroupFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Account ID"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/accountIdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:text="xxxxxxxx"
            android:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textSize="20sp"
            android:id="@+id/accountEmailStaticText" />

        <TextView
            android:id="@+id/accountEmailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:text="xxxxxxxx@gmail.com"
            android:textSize="20sp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/accountDisplayNameEditWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:drawableLeft="@drawable/ic_account_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_account_black_24dp"
                android:ems="10"
                android:hint="Display Name"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <io.yeomans.echelon.ButtonFlat
            android:id="@+id/accountLogoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:text="Logout" />
    </LinearLayout>
</RelativeLayout>