<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:id="@+id/groupSettingsFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:layout_marginTop="10dp"
      android:text="Group Settings"
      android:textSize="25sp" />

    <android.support.design.widget.TextInputLayout
      android:id="@+id/groupSettingsNameEditWrapper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:drawableLeft="@drawable/ic_library_music_black_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_library_music_black_24dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Group Name"
        android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginBottom="10dp"
      android:drawableLeft="@drawable/ic_account_multiple_black_24dp"
      android:drawablePadding="10dp"
      android:drawableStart="@drawable/ic_account_multiple_black_24dp"
      android:text="Default Playlist (Optional)"
      android:textSize="20sp" />

    <include
      android:id="@+id/groupSettingsDPlaylistLayout"
      layout="@layout/playlist_item_hor"
      android:visibility="gone" />

    <Button
      android:id="@+id/groupSettingsDPlaylistPickButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Pick Default Playlist" />

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:visibility="visible">

      <TextView
        android:id="@+id/groupSettingsPrivacyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_account_multiple_black_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_account_multiple_black_24dp"
        android:text="Privacy (Coming Soon)"
        android:textSize="20sp" />


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/groupSettingsPrivacyText"
        android:orientation="horizontal">

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

          <RadioButton
            android:id="@+id/groupSettingsPrivacyPublicRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:text="Public" />

          <RadioButton
            android:id="@+id/groupSettingsPrivacyPasswordRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/groupSettingsPrivacyPublicRadio"
            android:layout_alignStart="@+id/groupSettingsPrivacyPublicRadio"
            android:layout_below="@+id/groupSettingsPrivacyPublicRadio"
            android:checked="false"
            android:enabled="false"
            android:text="Password" />
        </RelativeLayout>

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

          <RadioButton
            android:id="@+id/groupSettingsPrivacyFriendsRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false"
            android:enabled="false"
            android:text="Friends" />

          <RadioButton
            android:id="@+id/groupSettingsPrivacyInviteRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/groupSettingsPrivacyFriendsRadio"
            android:checked="false"
            android:enabled="false"
            android:text="Invite Only" />
        </RelativeLayout>
      </LinearLayout>

    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
      android:id="@+id/groupSettingsPasswordEditWrapper"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:visibility="gone">

      <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@null"
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:ems="10"
        android:hint="Group Password"
        android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <Button
      android:id="@+id/groupSettingsSaveButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:text="Save Group Settings"
      android:theme="@style/EchelonRaisedButton" />
  </LinearLayout>
</RelativeLayout>
