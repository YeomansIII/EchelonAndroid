<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/ech_heroMode</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="windowActionBar">false</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:imageButtonStyle">@style/ClearImageButton</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ThemeActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="LoginFragText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/ech_seaFrost</item>
        <item name="colorControlHighlight">@color/ech_pearlBlueLuster</item>
    </style>

    <style name="ClearImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">@null</item>
    </style>

    <style name="EchelonRaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/ech_purpleRain</item>
        <item name="colorButtonNormal">@color/primaryAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">22dp</item>
    </style>

    <style name="NowPlayingCardViewStyle" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">0dp</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="cardBackgroundColor">@color/ech_seaFrost</item>
    </style>

    <style name="SongCardViewStyle" parent="CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">1dp</item>
        <item name="cardElevation">1dp</item>
        <item name="contentPaddingBottom">10dp</item>
        <item name="contentPaddingTop">10dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
</resources>